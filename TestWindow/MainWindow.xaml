<Window x:Class="TestWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWindow"
        mc:Ignorable="d"
        Title="Microsoft Translator - Immediate Window" Height="480" Width="1030">
    <Grid>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Height="210" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="500"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="210" Margin="515,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="500"/>
        <StackPanel HorizontalAlignment="Center" Height="Auto" Margin="10,294,0,0" VerticalAlignment="Top" Width="1002" Orientation="Horizontal">
            <Button x:Name="Translate" Content="Translate" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" Click="Translate_Click"/>
            <Button x:Name="BreakSentence" Content="BreakSentence" Height="30" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StatusBar x:Name ="StatusBar" HorizontalAlignment="Left" Height="22" Margin="10,427,0,0" VerticalAlignment="Top" Width="1002" />

    </Grid>
</Window>
